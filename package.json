{
  "name": "betting-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Complete betting system monorepo with backend API, client panels, operating panel, and user management",
  "scripts": {
    "postinstall": "npm run db:generate:all",
    "install:all": "npm install",
    "bootstrap": "npm install",
    
    "dev": "npm run dev:backend",
    "dev:backend": "cd backend/externalapi && npm run dev",
    "dev:client-panels": "cd client_panels && npm run dev",
    "dev:operating": "cd operating-panel/apps/frontend && npm run dev",
    "dev:user-mgmt": "cd user-management/apps/frontend && npm run dev",
    "dev:all": "concurrently -n backend,client,operating,user-mgmt -c blue,green,yellow,magenta \"npm run dev:backend\" \"npm run dev:client-panels\" \"npm run dev:operating\" \"npm run dev:user-mgmt\"",
    
    "build": "npm run build:all",
    "build:all": "npm run build:client-panels && npm run build:operating && npm run build:user-mgmt",
    "build:client-panels": "cd client_panels && npm run build",
    "build:operating": "cd operating-panel/apps/frontend && npm run build",
    "build:user-mgmt": "cd user-management/apps/frontend && npm run build",
    
    "start": "echo \"Use specific start scripts, e.g., npm run start:backend\"",
    "start:backend": "cd backend/externalapi && npm start",
    "start:client-panels": "cd client_panels && npm start",
    "start:operating": "cd operating-panel/apps/frontend && npm start",
    "start:user-mgmt": "cd user-management/apps/frontend && npm start",
    
    "lint": "npm run lint:all",
    "lint:all": "npm run lint:backend && npm run lint:client-panels && npm run lint:operating && npm run lint:user-mgmt",
    "lint:backend": "cd backend/externalapi && npm run lint",
    "lint:client-panels": "cd client_panels && npm run lint",
    "lint:operating": "cd operating-panel/apps/frontend && npm run lint",
    "lint:user-mgmt": "cd user-management/apps/frontend && npm run lint",
    
    "db:generate:all": "npm run db:generate:client-panels && npm run db:generate:operating && npm run db:generate:user-mgmt",
    "db:generate:client-panels": "cd client_panels && npm run db:generate",
    "db:generate:operating": "cd operating-panel/apps/frontend && npm run db:generate",
    "db:generate:user-mgmt": "cd user-management/apps/frontend && npm run db:generate",
    
    "db:push:all": "npm run db:push:client-panels && npm run db:push:operating && npm run db:push:user-mgmt",
    "db:push:client-panels": "cd client_panels && npm run db:push",
    "db:push:operating": "cd operating-panel/apps/frontend && npm run db:push",
    "db:push:user-mgmt": "cd user-management/apps/frontend && npm run db:push",
    
    "db:migrate:all": "npm run db:migrate:client-panels && npm run db:migrate:operating && npm run db:migrate:user-mgmt",
    "db:migrate:client-panels": "cd client_panels && npm run db:migrate",
    "db:migrate:operating": "cd operating-panel/apps/frontend && npm run db:migrate",
    "db:migrate:user-mgmt": "cd user-management/apps/frontend && npm run db:migrate",
    
    "test": "npm run test:backend",
    "test:backend": "cd backend/externalapi && npm test"
  },
  "dependencies": {
    "express": "^4.18.2",
    "socket.io": "^4.7.4",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "compression": "^1.7.4",
    "bullmq": "^4.15.0",
    "node-cron": "^3.0.3",
    "ioredis": "^5.3.2",
    "pg": "^8.11.3",
    "axios": "^1.6.2",
    "winston": "^3.11.0",
    "dotenv": "^16.3.1",
    "moment": "^2.30.1",
    "lodash": "^4.17.21",
    "jsonwebtoken": "^9.0.2",
    "express-rate-limit": "^7.2.0",
    "prom-client": "^15.1.2",
    "next": "^14.2.30",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-toastify": "^9.1.3",
    "tailwindcss": "^3.3.0",
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.31",
    "bcryptjs": "^2.4.3",
    "@prisma/client": "^5.22.0",
    "jose": "^6.0.12",
    "cookie": "^1.0.2",
    "dayjs": "^1.11.13",
    "antd": "^5.26.6",
    "rc-util": "^5.44.4",
    "react-icons": "^5.5.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "eslint": "^8.55.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-config-next": "^14.2.30",
    "@eslint/eslintrc": "^3.0.0",
    "typescript": "^5.0.0",
    "@types/node": "^20.0.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/cookie": "^0.6.0",
    "prisma": "^5.22.0",
    "tsx": "^4.6.2",
    "concurrently": "^9.0.0"
  },
  "engines": {
    "node": ">=18.17.0",
    "npm": ">=9.0.0"
  },
  "packageManager": "npm@10"
}

